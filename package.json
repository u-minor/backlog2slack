{
  "name": "backlog2slack",
  "version": "1.0.0",
  "private": true,
  "description": "Send Backlog notification to Slack",
  "author": "Minoru Nakata <minoru@sprocket.bz>",
  "license": "ISC",
  "engines": {
    "node": "18.x",
    "npm": "11.x"
  },
  "scripts": {
    "cdk": "cdk",
    "eslint": "eslint --ext .ts .",
    "lint": "run-p -l prettier tsc eslint",
    "prettier": "prettier --log-level warn -c .",
    "test": "jest",
    "tsc": "tsc --noEmit"
  },
  "dependencies": {
    "@aws-sdk/client-dynamodb": "3.436.0",
    "@aws-sdk/util-dynamodb": "3.436.0",
    "@slack/bolt": "3.14.0",
    "backlog-js": "0.13.1"
  },
  "devDependencies": {
    "@types/aws-lambda": "8.10.159",
    "@types/jest": "29.5.14",
    "@typescript-eslint/eslint-plugin": "6.21.0",
    "@typescript-eslint/parser": "6.21.0",
    "aws-cdk": "2.1034.0",
    "aws-cdk-lib": "2.111.0",
    "dotenv": "16.6.1",
    "esbuild-jest": "0.5.0",
    "eslint": "8.57.1",
    "eslint-config-prettier": "9.1.2",
    "eslint-config-standard": "17.1.0",
    "jest": "29.7.0",
    "npm-run-all": "4.1.5",
    "prettier": "3.7.4",
    "ts-node": "10.9.2",
    "typescript": "5.9.3"
  },
  "eslintConfig": {
    "extends": [
      "eslint:recommended",
      "plugin:@typescript-eslint/recommended",
      "prettier"
    ]
  },
  "eslintIgnore": [
    "build",
    "cdk.out"
  ],
  "jest": {
    "testEnvironment": "node",
    "transform": {
      "^.+\\.tsx?$": "esbuild-jest"
    }
  },
  "prettier": {
    "singleQuote": true
  }
}
