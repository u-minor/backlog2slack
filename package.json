{
  "name": "backlog2slack",
  "version": "1.0.0",
  "private": true,
  "description": "Send Backlog notification to Slack",
  "author": "Minoru Nakata <minoru@sprocket.bz>",
  "license": "ISC",
  "engines": {
    "node": "18.x",
    "npm": "9.x"
  },
  "scripts": {
    "clean": "rm -rf build dist",
    "build": "tsc",
    "lambda": "npm run build && mkdir -p dist && cp -r package*.json build && pushd build && npm install --omit=dev && rm package*.json && zip -r ../dist/lambda.zip . > /dev/null && popd",
    "eslint": "eslint --ext .ts .",
    "lint": "run-p -l prettier tsc eslint",
    "prettier": "prettier --log-level warn -c .",
    "tsc": "tsc --noEmit"
  },
  "dependencies": {
    "lodash": "^4.17.15",
    "slack-node": "^0.1.8"
  },
  "devDependencies": {
    "@types/aws-lambda": "8.10.119",
    "@types/lodash": "4.14.197",
    "@types/slack-node": "0.1.4",
    "@typescript-eslint/eslint-plugin": "6.4.0",
    "@typescript-eslint/parser": "6.4.0",
    "backlog-js": "0.13.1",
    "dotenv": "16.3.1",
    "eslint": "8.47.0",
    "eslint-config-prettier": "9.0.0",
    "eslint-config-standard": "17.1.0",
    "npm-run-all": "4.1.5",
    "prettier": "3.0.2",
    "typescript": "5.1.6"
  },
  "eslintConfig": {
    "extends": [
      "eslint:recommended",
      "plugin:@typescript-eslint/recommended",
      "prettier"
    ]
  },
  "eslintIgnore": [
    "build"
  ],
  "prettier": {
    "singleQuote": true
  }
}
