{
  "name": "backlog2slack",
  "version": "1.0.0",
  "private": true,
  "description": "Send Backlog notification to Slack",
  "author": "Minoru Nakata <minoru@sprocket.bz>",
  "license": "ISC",
  "engines": {
    "node": "18.x",
    "npm": "9.x"
  },
  "scripts": {
    "clean": "rm -rf build dist",
    "build": "mkdir -p build dist && cp -r package*.json src/* build && pushd build && npm install --production && rm package*.json && zip -r ../dist/lambda.zip . > /dev/null && popd",
    "eslint": "eslint --ext .js .",
    "lint": "run-p -l prettier eslint",
    "prettier": "prettier --log-level warn -c ."
  },
  "dependencies": {
    "lodash": "^4.17.15",
    "request": "^2.88.0",
    "request-promise-native": "^1.0.8",
    "slack-node": "^0.1.8"
  },
  "devDependencies": {
    "eslint": "8.47.0",
    "eslint-config-prettier": "9.0.0",
    "eslint-config-standard": "17.1.0",
    "npm-run-all": "4.1.5",
    "prettier": "3.0.2"
  },
  "eslintConfig": {
    "extends": [
      "standard",
      "prettier"
    ],
    "parserOptions": {
      "ecmaVersion": 8
    }
  },
  "eslintIgnore": [
    "build"
  ],
  "prettier": {
    "singleQuote": true
  }
}
